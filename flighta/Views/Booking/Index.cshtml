@using static Flighta.ApiControllers.BookingController;
@model List<BookingDetails>
@{
    ViewData["Title"] = "Bookings";
}
<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <div class="text-center my-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-2">
                        <i class="bi bi-calendar2-check" style="font-size:2rem;"></i>
                    </div>
                    <h2 class="display-5 fw-bolder text-white mb-2">Current Bookings</h2>
                    <p class="lead text-white-50 mb-4">Here lies your bookings history</p>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Flights section-->
<section class="py-5 border-bottom" id="features">
    <div class="container px-5 my-5">
        <form method="post">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th class="text-center">
                            UserId
                        </th>
                        <th class="text-center">
                            FlightId
                        </th>
                        <th class="text-center">
                            Booking Time
                        </th>
                        <th class="text-center">
                            Delete
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in @Model)
                    {
                        <tr>
                            <td class="text-center" id="userid" name="userid" asp-for="list[0].userid">
                                @booking.userid
                            </td>
                            <td class="text-center" id="flightid" name="flightid">
                                @booking.flightid
                            </td>
                            <td class="text-center">
                                @booking.time
                            </td>
                            <td class="text-center">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</section>

