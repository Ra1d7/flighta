@model Flighta.Data.FlightM

@{
    ViewData["Title"] = "Delete Flight";
}

<h1>Edit</h1>

<h4>FlightM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="flightId" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="flightId" class="control-label"></label>
                <span asp-validation-for="flightId" class="text-danger"></span>
                <input asp-for="flightId" disabled class="form-control disabled" />
            </div>
            <div class="form-group">
                <label asp-for="From" class="control-label"></label>
                <span asp-validation-for="From" class="text-danger"></span>
                <input asp-for="From" disabled class="form-control disabled" />
            </div>
            <div class="form-group">
                <label asp-for="To" class="control-label"></label>
                <span asp-validation-for="To" class="text-danger"></span>
                <input asp-for="To" disabled class="form-control disabled" />
            </div>
            <div class="form-group">
                <label asp-for="seats" class="control-label"></label>
                <span asp-validation-for="seats" class="text-danger"></span>
                <input asp-for="seats" disabled class="form-control disabled" />
            </div>
            <div class="form-group">
                <label asp-for="flightTime" class="control-label"></label>
                <span asp-validation-for="flightTime" class="text-danger"></span>
                <input asp-for="flightTime" disabled class="form-control disabled" />
            </div>
            <div class="form-group">
                <label asp-for="cost" class="control-label"></label>
                <span asp-validation-for="cost" class="text-danger"></span>
                <input asp-for="cost" disabled class="form-control disabled" />
            </div>
            <div class="form-group m-2">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" asp-controller="Flights" asp-action="Delete" value="Delete" class="btn btn-danger mx-2" />
            </div>
        </form>
    </div>
</div>

